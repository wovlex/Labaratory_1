<Window x:Class="Laba_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700">
    <Grid>
         <Canvas x:Name="Scene" HorizontalAlignment="Left" Height="150" Margin="100,250,0,0" VerticalAlignment="Center" Width="500"/>
         <Button x:Name="ButtonTre" Height="100" Width="170" Margin="0,0,500,250" Click="ButtonTre_Click" Content="Произвольный треугольник" FontSize="13"/>
        <Button x:Name="ButtonPra" Height="100" Width="170" Margin="251,42,279,292" Content="Произвольный прямоугольник" FontSize="11" Click="ButtonPra_Click"/>
        <Button x:Name="ButtonKva" Height="100" Width="170" Margin="500,42,30,292" Click="ButtonKva_Click" Content="Квадрат" FontSize="13"/>
        <Slider HorizontalAlignment="Left" Margin="150,180,0,0" VerticalAlignment="Top" Width="500" ValueChanged="SliderX" Minimum="0" Maximum="500"/>
        <Slider HorizontalAlignment="Left" Margin="150,230,0,0" VerticalAlignment="Top" Width="500" ValueChanged="SliderY" Minimum="0" Maximum="100"/>
        <TextBlock HorizontalAlignment="Left" Margin="60,180,0,0" TextWrapping="Wrap" Text="Сдвиг по X:" VerticalAlignment="Top" FontSize="15"/>
        <TextBlock HorizontalAlignment="Left" Margin="60,230,0,0" TextWrapping="Wrap" Text="Сдвиг по Y:" VerticalAlignment="Top" FontSize="15"/>
    </Grid>
</Window>
